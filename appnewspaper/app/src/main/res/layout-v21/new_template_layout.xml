<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/new_template_layout">

    <android.support.v7.widget.CardView
        android:elevation="15dp"
        app:cardPreventCornerOverlap="false"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:cardCornerRadius="@dimen/card_view_radius">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageNew"
            android:src="@mipmap/img_article"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/marginTopNewTemplate"
            android:background="#96FFFFFF">
        <TextView
            android:id="@+id/titleNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSizeNewTitle"
            android:textColor="@color/colorDark" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/categoryNew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_large1"
                    android:textColor="@color/colorDark"
                    android:gravity="center_horizontal"/>
            </LinearLayout>

        <TextView
            android:id="@+id/abstractNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_small1"
            android:textColor="@color/colorDark"
            android:gravity="center_horizontal"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>