<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageArticleAfter"
        android:layout_width="410dp"
        android:layout_height="197dp"
        android:padding="10dp"
        tools:layout_editor_absoluteY="4dp"
        android:src="@mipmap/img_article"/>

    <LinearLayout
        android:layout_width="58dp"
        android:layout_height="120dp"
        android:layout_marginStart="356dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp">

        <ImageButton
            android:id="@+id/buttonDeleteArticle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:src="@android:drawable/ic_menu_delete" />

        <ImageButton
            android:id="@+id/buttonEditArticle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:backgroundTint="@color/colorAccent"
            android:src="@android:drawable/ic_menu_edit" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="357dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="15dp">

        <TextView
            android:id="@+id/titleAfterLogin2"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#B3FFFFFF"
            android:textAlignment="center"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/categoryAfterLogin2"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:background="#B3FFFFFF"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/abstractAfterLogin2"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:layout_gravity="center"
            android:background="#B3FFFFFF"
            android:textAlignment="center" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>