<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.testlistview.Modify_article_after_login"
    tools:showIn="@layout/activity_modify_article_after_login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageModify"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_marginBottom="10dp"
            tools:src="@tools:sample/avatars" />

        <Button
            android:id="@+id/chooseImagen"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@color/colorPrimary"
            android:text="@string/imagenModify" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:text="@string/titleModify"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/titleModify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:editable="true" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/subtitleModify"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/subtitleModify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/abstractModify"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/abstractModify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/bodyModify"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/bodyModify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/chooseCategoryModify"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/categoryModify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20dp"
            android:scrollbarSize="@dimen/activity_horizontal_margin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancelModify"
                android:layout_width="159dp"
                android:layout_height="74dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="20dp"
                android:background="@color/colorAccent"
                android:text="@string/cancelModify"
                android:textColor="#FAFFFFFF"
                android:textColorLink="#3949AB" />

            <Button
                android:id="@+id/saveModify"
                android:layout_width="159dp"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="20dp"
                android:background="@color/colorPrimary"
                android:text="@string/saveModify" />
        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>